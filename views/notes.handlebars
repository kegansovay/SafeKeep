<html lang="en">
<head>
  <meta charset="utf-8"/>
  <title>SafeKeep</title>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.0/animate.min.css">
  <link rel="shortcut icon" href="/assets/img/favicon.png"/>
  <link rel="stylesheet" type="text/css" href="/assets/style.css"/>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
  <script src="/assets/bundle.js"></script>

      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="/maker">
        <img src="/assets/img/logo.svg" width="30" height="30" class="d-inline-block align-top" alt="">
        SafeKeep
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item ">
            <a class="nav-link" href="/maker">Home </a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/notes">Secret Notes <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/about">About</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/changepass">Change pass</a>
          </li>
        </ul>
        <form class="form-inline my-2 my-lg-0">
          <a class="btn btn-outline-success my-2 my-sm-0" href="/logout">Logout</a>
        </form>
      </div>
    </nav>


  <div class="row text-centered p-5" >
    
    <div class="col-lg-12 text-center">
        <button type="button" class="btn-lg btn-success" data-toggle="modal" data-target="#createModal">
          Add new note
        </button>
    </div>
    
  </div>

<!-- Modal -->
<div class="modal fade " id="createModal" tabindex="-1" role="dialog" aria-labelledby="" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content" id="">
      <div class="modal-header">
        <h5 class="modal-title" id="">Add new secret note</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
            <section id="addNew">
            <form id="noteForm" name="noteForm" action="/notes" method="POST" class="noteForm">
              <label for="name">Note Title: </label>
              <input id="notetitle" type="text" name="notetitle" />
              <br>
              <label for="content">Note: </label> <br>
              <textarea rows="4" cols="50" id="content" name="content" style="text-align: justify;"></textarea>
              
              <input type="hidden" name="_csrf" value={{csrfToken}} />
              
              <br>
              <hr>
              
              <input class=" btn btn-success" disabled="disabled" id="noteButton" type="submit"   value="Add Note" />
            </form>
          </section>
      </div>
      
    </div>
  </div>
</div>



  
  <section id="domos">
    <div class="p-5" id="cards">
      {{#if notes}}
        {{#each notes}}
              

          <div class="flip-container border-success" ontouchstart="this.classList.toggle('hover');">
            <div class="flippable appcon ac-bicycle">
              <div class="front border-success">
                {{this.notetitle}}
                
              </div>
              <div class="back border-success">
                <p class="note" >{{this.content}}</p>
              </div>
            </div>
          </div>
            
            
            

          

         

          
        {{/each}}
        {{else}}
          <h3 class="text-center">No notes yet</h3>
         


          
        {{/if}}
    </div>
  </section>
  <script>
    //let count = 0;
    let cardList = document.querySelectorAll('.fake');
    for (i = 0; i < cardList.length; i++) {
      cardList[i].id = count;
      count ++;
    }
  </script>
 
  
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>